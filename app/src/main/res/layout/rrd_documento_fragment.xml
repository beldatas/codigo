<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical"
    android:padding="@dimen/widght_padding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/widght_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/widght_padding_3"
                android:text="@string/rrd_numero_auto"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/et_rrd_n_auto_de_infracao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow_light"
                android:gravity="left|center_vertical"
                android:inputType="number"
                android:padding="@dimen/widght_padding"
                android:textColor="@color/whight"
                android:textCursorDrawable="@null" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/widght_padding_3"
                android:text="@string/nome_do_condutor"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/whight" />

            <EditText
                android:id="@+id/et_rrd_nome_do_condutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow_light"
                android:gravity="left|center_vertical"
                android:inputType="number"
                android:padding="@dimen/widght_padding"
                android:textColor="@color/whight"
                android:textCursorDrawable="@null" >
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/widght_padding_3"
                android:text="@string/rrd_documento"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/whight" />

            <Spinner
                android:id="@+id/spinner_rrd_documento"
                style="@style/Theam.Spinner_theam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:padding="@dimen/widght_padding" />

            <LinearLayout
                android:id="@+id/layout_remove_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout_remove_placa_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/widght_padding_3"
                        android:text="@string/rrd_numero_crlv"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whight" />

                    <EditText
                        android:id="@+id/et_rrd_n_crlv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/yellow_light"
                        android:gravity="left|center_vertical"
                        android:inputType="number"
                        android:padding="@dimen/widght_padding"
                        android:textColor="@color/whight"
                        android:textCursorDrawable="@null" >
                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/widght_padding_3"
                        android:text="@string/rrd_placa"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whight" />

                    <EditText
                        android:id="@+id/et_rrd_placa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/yellow_light"
                        android:gravity="left|center_vertical"
                        android:inputType="number"
                        android:padding="@dimen/widght_padding"
                        android:textColor="@color/whight"
                        android:textCursorDrawable="@null" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_remove_n_registro_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/widght_padding_3"
                        android:text="@string/rrd_numero_registro"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whight" />

                    <EditText
                        android:editable="false"
                        android:id="@+id/et_rrd_n_registro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/yellow_light"
                        android:gravity="left|center_vertical"
                        android:inputType="text"
                        android:padding="@dimen/widght_padding"
                        android:textColor="@color/whight"
                        android:textCursorDrawable="@null" >
                    </EditText>

                    <Button
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/btn_rrd_validade"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/widght_margin_top"
                        android:background="@drawable/btn_yellow_2"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/widght_padding"
                        android:text="@string/rrd_validade"
                        android:textColor="@color/whight" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/widght_padding_3"
            android:text="@string/rrd_uf"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whight" />

        <EditText
            android:id="@+id/et_rrd_uf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_light"
            android:gravity="left|center_vertical"
            android:inputType="number"
            android:padding="@dimen/widght_padding"
            android:textColor="@color/whight"
            android:textCursorDrawable="@null" />
    </LinearLayout>

</ScrollView>