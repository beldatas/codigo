<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/widght_padding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/widght_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingRight="@dimen/indicator_width" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/widght_padding_3"
                    android:text="@string/placa"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/whight" />

                <EditText
                    android:editable="false"
                    android:id="@+id/editPlacaVeiculo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow_light"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:padding="@dimen/widght_padding"
                    android:textColor="@color/whight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/indicator_width" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/widght_padding_3"
                    android:text="@string/auto_de_pais"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/whight" />

                <Spinner
                    android:id="@+id/autode_spinner_pais"
                    style="@style/Theam.Spinner_theam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/widght_padding"
                    android:paddingBottom="@dimen/widght_padding" />
            </LinearLayout>
        </LinearLayout>

        <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/widght_padding_3"
                    android:text="@string/marca_modelo"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/whight" />

                <EditText
                    android:editable="false"
                    android:id="@+id/editModeloVeiculo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow_light"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:padding="@dimen/widght_padding"
                    android:textColor="@color/whight" />
                  

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/widght_padding_3"
            android:text="@string/numero_do_chassi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whight" />

        <EditText
            android:id="@+id/editChassiVeiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_light"
            android:gravity="center"
            android:inputType="textCapSentences"
            android:padding="@dimen/widght_padding"
            android:textColor="@color/whight" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/widght_padding_3"
            android:text="@string/auto_de_cor_do_veiculo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whight" />

        <EditText
            android:editable="false"
            android:id="@+id/editCorVeiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_light"
            android:gravity="left|center_vertical"
            android:inputType="textCapCharacters"
            android:padding="@dimen/widght_padding"
            android:textColor="@color/whight" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/widght_padding_3"
            android:text="@string/especie"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whight" />

        <Spinner
            android:id="@+id/autode_spinner_especie"
            style="@style/Theam.Spinner_theam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/widght_padding"
            android:paddingBottom="@dimen/widght_padding" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/widght_padding_3"
            android:text="@string/categoria"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whight" />

        <Spinner
            android:id="@+id/autode_spinner_categoria"
            style="@style/Theam.Spinner_theam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/widght_padding"
            android:paddingBottom="@dimen/widght_padding" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/widght_padding_3"
            android:text="@string/nome_do_condutor"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whight" />

        <EditText
            android:id="@+id/editNomeCondutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_light"
            android:gravity="left|center_vertical"
            android:inputType="textCapCharacters"
            android:padding="@dimen/widght_padding"
            android:textColor="@color/whight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingRight="@dimen/indicator_width" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/widght_padding_3"
                    android:text="@string/CNH_PPD"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/whight" />

                <EditText
                    android:id="@+id/editCnhPpdAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow_light"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="@dimen/widght_padding"
                    android:textColor="@color/whight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
            android:layout_height="match_parent"
                android:layout_weight=".1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/indicator_width" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/widght_padding_3"
                    android:text="@string/uf_cnh"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/whight" />

                <EditText
                    android:id="@+id/editUfRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow_light"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:padding="@dimen/widght_padding"   
                    android:textColor="@color/whight" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/widght_padding_3"
                android:text="@string/tipo_documento_apresentado"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/whight" />

            <RadioGroup
                android:id="@+id/rg_tipo_de_documento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radioRg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tipo_rg"
                    android:textColor="@color/whight" />

                <RadioButton
                    android:id="@+id/radioCpf"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tipo_cpf"
                    android:textColor="@color/whight" />

                <RadioButton
                    android:id="@+id/radioOutros"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tipo_outros"
                    android:textColor="@color/whight" />
            </RadioGroup>

            <EditText
                android:id="@+id/editNumeroDocumento"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow_light"
                android:gravity="center"
                android:inputType="number"
                android:padding="@dimen/widght_padding"
                android:textColor="@color/whight" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>